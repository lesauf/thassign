{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "experimentalDecorators": true,
    "outDir": "./out-tsc/app",
    "types": ["node"],
    "paths": {
      "@src/*": ["src/*.web", "src/*"]
    }
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts",
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "exclude": ["src/test.ts", "src/**/*.spec.ts"]
}
